doctype html
html
  head
    meta(charset="utf-8")
    title= title
    style.
      body { font-family: Arial, sans-serif; margin: 24px; }
      h1 { margin: 0 0 12px 0; text-align: center; }
      nav { display: flex; justify-content: space-between; width: 520px; margin: 0 auto 18px auto; }
      nav a { text-decoration: none; color: #000; }
      nav a:hover { text-decoration: underline; }
      .active { font-weight: 700; }
  body
    h1= title
    nav
      a(href="/home" class=(active === "home" ? "active" : "")) Home
      a(href="/capitals" class=(active === "capitals" ? "active" : "")) Capitals
      a(href="/populous" class=(active === "populous" ? "active" : "")) Populous
      a(href="/regions" class=(active === "regions" ? "active" : "")) Regions
    block content